@using Car_with_database.Models
@model Car_with_database.Models.Trip

@{
    ViewBag.Title = "PlanTrip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Plan a future trip</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"> Starting Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.startingAddress, new {htmlAttributes = new {@class = "form-control" }})
                @Html.ValidationMessageFor(model => model.startingAddress, "Starting address is needed", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Starting Zip</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.startingZip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.startingZip, "Starting zip is needed", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Starting City</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.startingCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.startingCity, "Starting city is needed", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Destination Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.destinationAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.destinationAddress, "Destination address is needed", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Destination Zip</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.destinationZip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.destinationZip, "Destination zip is needed", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Destination City</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.destinationCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.destinationCity, "Destination city is needed", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Date and time</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.time, new {htmlAttributes = new {@class = "form-control", @type= "datetime-local" } })
                @Html.ValidationMessageFor(model => model.time, "Date and time are needed", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2"> Number of seats</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.numberOfSeats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numberOfSeats, "Number of seats are needed", new { @class = "text-danger" })
            </div>
        </div>

        @{



            if ((bool)Session["LoggedIn"])
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="Button" value="Log in to plan a trip" class="btn btn-default"/>
                    </div>
                </div>
            }


        }
    </div>}

